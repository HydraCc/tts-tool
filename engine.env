# TTS Engine Environment Variables
# This file contains environment variables specific to the TTS engine container

# Python Settings
PYTHONPATH=/engine
PYTHONUNBUFFERED=1

# Application Environment
TTS_ENV=development

# Device Configuration
# Options: auto, cpu, cuda, mps
TTS_DEVICE=auto

# Performance Settings
TTS_WORKERS=1
TTS_MAX_MEMORY_GB=4

# Directory Configuration (container paths)
TTS_MODEL_CACHE_DIR=/engine/models
TTS_SAMPLE_DATA_DIR=/engine/sample_data
TTS_OUTPUT_DIR=/engine/output

# Logging
TTS_LOG_LEVEL=INFO
TTS_LOG_FORMAT=json

# Model Configuration
TTS_DEFAULT_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_MODELS_AUTO_DOWNLOAD=true

# Audio Configuration
TTS_DEFAULT_SAMPLE_RATE=22050
TTS_DEFAULT_AUDIO_FORMAT=wav
